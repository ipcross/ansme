<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    $('.answer-errors').html('<%= j message %>');
  <% end %>
<% else %>
  <% publish_to "/questions/#{@question.id}/answers" do %>
    $('tbody').append('<%= j render "answer", answer: @answer, comment: @comment %>');
  <% end %>
  $('#new-answer-form').val('');
<% end %>
